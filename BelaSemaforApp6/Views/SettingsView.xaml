<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:BelaSemaforApp6.ViewModels"
             x:DataType="viewModels:SettingsViewModel"
             x:Class="BelaSemaforApp6.Views.SettingsView">
    <ContentPage.Content>
        <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- SettingsView header -->
            <Frame BackgroundColor="DarkSlateBlue" CornerRadius="10">
                <HorizontalStackLayout HorizontalOptions="Start" Spacing="60">
                    <Button Command="{Binding NavigateToGameCommand}"/>
                    <Label Text="Postavke" FontSize="24" TextColor="GhostWhite" HorizontalOptions="Center" />
                </HorizontalStackLayout>
            </Frame>
            
            <!-- App Visuals Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="App Visuals" FontSize="20" FontAttributes="Bold" TextColor="DarkSlateGray" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout>
                            <Label Text="Theme" VerticalOptions="Center" />
                            <Picker/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Font Size" VerticalOptions="Center" />
                            <Slider Minimum="12" Maximum="24" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <!-- Winning Conditions Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="Winning Conditions" FontSize="20" FontAttributes="Bold" TextColor="DarkSlateGray" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout>
                            <Label Text="Winning Score" VerticalOptions="Center" />
                            <Entry Keyboard="Numeric" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <!-- Players and Teams Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="Players and Teams" FontSize="20" FontAttributes="Bold" TextColor="DarkSlateGray" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10">
                        <Button Text="Add Player" />
                        <Button Text="Add Team" />
                        <CollectionView >
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label />
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>
        </VerticalStackLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>