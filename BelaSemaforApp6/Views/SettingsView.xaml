<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:BelaSemaforApp6.ViewModels"
             x:DataType="viewModels:SettingsViewModel"
             x:Class="BelaSemaforApp6.Views.SettingsView"
             BackgroundColor="{Binding ThemeColors.PrimaryColor}">
    <ContentPage.Content>
        <ScrollView>
        <VerticalStackLayout Spacing="20">
            
            <!-- SettingsView header -->
            <Border BackgroundColor="{Binding ThemeColors.SecondaryColor}" 
                    StrokeShape="RoundRectangle 0,0,40,40"
                    HorizontalOptions="FillAndExpand"
                    Stroke="Transparent"
                    Padding="30">
                <HorizontalStackLayout HorizontalOptions="Start" Spacing="60">
                    <Button Command="{Binding NavigateToGameCommand}" BackgroundColor="{Binding ThemeColors.PrimaryColor}"/>
                    <Label Text="Postavke" FontSize="24" TextColor="{Binding ThemeColors.PrimaryColor}" HorizontalOptions="Center" />
                </HorizontalStackLayout>
            </Border>
            
            <!-- App Visuals Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Border StrokeShape="RoundRectangle 7,7,7,7" Stroke="Transparent" Padding="13" Margin="10,0,10,0" BackgroundColor="{Binding ThemeColors.SecondaryColor}">
                        <Label Text="App Visuals" FontSize="20" FontAttributes="Bold" TextColor="{Binding ThemeColors.PrimaryColor}" HorizontalTextAlignment="Center"/>
                    </Border>
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10" Margin="10">
                        <CollectionView HorizontalOptions="CenterAndExpand" ItemsSource="{Binding PrimaryColors}">
                            <CollectionView.ItemsLayout>
                                <!-- Display squares in a grid layout -->
                                <GridItemsLayout Orientation="Vertical" Span="3" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Button BackgroundColor="{Binding .}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SetPrimaryCommand}"
                                            CommandParameter="{Binding .}"
                                            BorderColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ThemeColors.SecondaryColor}"
                                            BorderWidth="1"
                                            Margin="2"
                                            HeightRequest="40"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <CollectionView HorizontalOptions="CenterAndExpand" ItemsSource="{Binding SecondaryColors}">
                            <CollectionView.ItemsLayout>
                                <!-- Display squares in a grid layout -->
                                <GridItemsLayout Orientation="Vertical" Span="6" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Button BackgroundColor="{Binding .}" 
                                            WidthRequest="40" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SetSecondaryCommand}"
                                            CommandParameter="{Binding .}"
                                            BorderColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ThemeColors.SecondaryColor}"
                                            BorderWidth="1"
                                            Margin="2"
                                            HeightRequest="40"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <!-- Winning Conditions Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Border StrokeShape="RoundRectangle 7,7,7,7" Stroke="Transparent" Padding="13" Margin="10,0,10,0" BackgroundColor="{Binding ThemeColors.SecondaryColor}">
                        <Label Text="Winning Conditions" 
                               FontSize="20" FontAttributes="Bold" 
                               TextColor="{Binding ThemeColors.PrimaryColor}" 
                               HorizontalTextAlignment="Center"/>
                    </Border>
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10" Margin="10">
                        <Grid ColumnDefinitions="*,*"
                              RowDefinitions="Auto,Auto,Auto">
                            <!-- First Row -->
                            <RadioButton Grid.Row="0" Grid.Column="0" GroupName="ScoreSelection" Content="301" Style="{DynamicResource RadioButtonStyle}" />
                            <RadioButton Grid.Row="1" Grid.Column="0" GroupName="ScoreSelection" Content="501" Style="{DynamicResource RadioButtonStyle}" />
                            <RadioButton Grid.Row="2" Grid.Column="0" GroupName="ScoreSelection" Content="701" Style="{DynamicResource RadioButtonStyle}" />
            
                            <!-- Second Row -->
                            <RadioButton Grid.Row="0" Grid.Column="1" GroupName="ScoreSelection" Content="901" Style="{DynamicResource RadioButtonStyle}" />
                            <RadioButton Grid.Row="1" Grid.Column="1" GroupName="ScoreSelection" Content="1001" Style="{DynamicResource RadioButtonStyle}" IsChecked="True"/>
                            <RadioButton Grid.Row="2" Grid.Column="1" GroupName="ScoreSelection" Content="1301" Style="{DynamicResource RadioButtonStyle}" />
                        </Grid>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <!-- Players and Teams Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Border StrokeShape="RoundRectangle 7,7,7,7" Stroke="Transparent" Padding="13" Margin="10,0,10,0" BackgroundColor="{Binding ThemeColors.SecondaryColor}">
                        <Label Text="Players and Teams" FontSize="20" FontAttributes="Bold" TextColor="{Binding ThemeColors.PrimaryColor}" HorizontalTextAlignment="Center"/>
                    </Border>
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10" Margin="10">
                        <!-- Add Player Button -->
                        <Button Text="Add Player" 
                                Command="{Binding AddPlayerCommand}" 
                                TextColor="{Binding ThemeColors.PrimaryColor}" 
                                BackgroundColor="{Binding ThemeColors.SecondaryColor}"/>

                        <!-- Add Team Button -->
                        <Button Text="Add Team" 
                                Command="{Binding AddTeamCommand}" 
                                TextColor="{Binding ThemeColors.PrimaryColor}" 
                                BackgroundColor="{Binding ThemeColors.SecondaryColor}"/>

                        <!-- List of Players -->
                        <Label Text="Players" FontSize="16" FontAttributes="Bold" TextColor="{Binding ThemeColors.SecondaryColor}"/>
                        <CollectionView ItemsSource="{Binding Players}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label Text="{Binding Name}" 
                                               FontSize="14" 
                                               TextColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                    Path=BindingContext.ThemeColors.SecondaryColor}"/>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- List of Teams -->
                        <Label Text="Teams" FontSize="16" FontAttributes="Bold" TextColor="{Binding ThemeColors.SecondaryColor}"/>
                        <CollectionView ItemsSource="{Binding Teams}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label Text="{Binding Name}" FontSize="14" 
                                               TextColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                    Path=BindingContext.ThemeColors.SecondaryColor}"/>
                                        <Label Text="Players: {Binding PlayerOneId}, {Binding PlayerTwoId}" FontSize="12" 
                                               TextColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                    Path=BindingContext.ThemeColors.SecondaryColor}"/>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>
        </VerticalStackLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>