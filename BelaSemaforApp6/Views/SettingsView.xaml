<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:BelaSemaforApp6.ViewModels"
             x:DataType="viewModels:SettingsViewModel"
             x:Class="BelaSemaforApp6.Views.SettingsView"
             BackgroundColor="{Binding ThemeColors.PrimaryColor}">
    <ContentPage.Content>
        <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- SettingsView header -->
            <Frame BackgroundColor="{Binding ThemeColors.SecondaryColor}" CornerRadius="10" Padding="10" Margin="0">
                <HorizontalStackLayout HorizontalOptions="Start" Spacing="60">
                    <Button Command="{Binding NavigateToGameCommand}" BackgroundColor="{Binding ThemeColors.PrimaryColor}"/>
                    <Label Text="Postavke" FontSize="24" TextColor="{Binding ThemeColors.PrimaryColor}" HorizontalOptions="Center" />
                </HorizontalStackLayout>
            </Frame>
            
            <!-- App Visuals Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="{Binding ThemeColors.SecondaryColor}">
                        <Label Text="App Visuals" FontSize="20" FontAttributes="Bold" TextColor="{Binding ThemeColors.PrimaryColor}" HorizontalTextAlignment="Center"/>
                    </Frame>
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10" Margin="10">
                        <CollectionView HorizontalOptions="CenterAndExpand" ItemsSource="{Binding PrimaryColors}">
                            <CollectionView.ItemsLayout>
                                <!-- Display squares in a grid layout -->
                                <GridItemsLayout Orientation="Vertical" Span="3" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Button BackgroundColor="{Binding .}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SetPrimaryCommand}"
                                            CommandParameter="{Binding .}"
                                            BorderColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ThemeColors.SecondaryColor}"
                                            BorderWidth="1"
                                            Margin="2"
                                            HeightRequest="40"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <CollectionView HorizontalOptions="CenterAndExpand" ItemsSource="{Binding SecondaryColors}">
                            <CollectionView.ItemsLayout>
                                <!-- Display squares in a grid layout -->
                                <GridItemsLayout Orientation="Vertical" Span="6" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Button BackgroundColor="{Binding .}" 
                                            WidthRequest="40" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SetSecondaryCommand}"
                                            CommandParameter="{Binding .}"
                                            BorderColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ThemeColors.SecondaryColor}"
                                            BorderWidth="1"
                                            Margin="2"
                                            HeightRequest="40"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <!-- Winning Conditions Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="{Binding ThemeColors.SecondaryColor}">
                        <Label Text="Winning Conditions" FontSize="20" FontAttributes="Bold" TextColor="{Binding ThemeColors.PrimaryColor}" HorizontalTextAlignment="Center"/>
                    </Frame>
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10" Margin="10">
                        <VerticalStackLayout HorizontalOptions="Start" Padding="10">
                            <RadioButton GroupName="ScoreSelection" Content="301" Style="{DynamicResource RadioButtonStyle}"/>
                            <RadioButton GroupName="ScoreSelection" Content="501" Style="{DynamicResource RadioButtonStyle}"/>
                            <RadioButton GroupName="ScoreSelection" Content="701" Style="{DynamicResource RadioButtonStyle}"/>
                            <RadioButton GroupName="ScoreSelection" Content="901" Style="{DynamicResource RadioButtonStyle}"/>
                            <RadioButton GroupName="ScoreSelection" Content="1001" Style="{DynamicResource RadioButtonStyle}"/>
                            <RadioButton GroupName="ScoreSelection" Content="1301" Style="{DynamicResource RadioButtonStyle}"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <!-- Players and Teams Expander -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="{Binding ThemeColors.SecondaryColor}">
                        <Label Text="Players and Teams" FontSize="20" FontAttributes="Bold" TextColor="{Binding ThemeColors.PrimaryColor}" HorizontalTextAlignment="Center"/>
                    </Frame>
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <VerticalStackLayout Spacing="10" Margin="10">
                        <Button Text="Add Player" />
                        <Button Text="Add Team" />
                        <CollectionView >
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label />
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </toolkit:Expander.Content>
            </toolkit:Expander>
        </VerticalStackLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>